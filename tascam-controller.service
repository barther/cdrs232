[Unit]
Description=TASCAM CD-400U Web Controller
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/cdrs232
Environment="PATH=/home/pi/cdrs232/venv/bin"
ExecStart=/home/pi/cdrs232/venv/bin/python /home/pi/cdrs232/app.py --host 0.0.0.0 --port 5000 --auto-connect
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
